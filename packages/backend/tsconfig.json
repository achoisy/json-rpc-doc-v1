{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "module": "CommonJS",
        "noEmit": false,
        "allowImportingTsExtensions": false,
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node"
    },
    "include": [
        "src/**/*"
    ]
}